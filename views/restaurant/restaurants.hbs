
{{#if message}}
    <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
              {{ message }}
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
          </button>
      </div>
  {{/if}}

<div class="row">
  <div style="margin-left: 95%">
    <a class=" float-right btn btn-success" href="/addrest" role="button">Add</a>
  </div>
</div>

<br>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Restaurants</strong>
        </div>
        <div class="table-stats order-table ov-h">
            <table class="table ">
                <thead>
                    <tr>
                        <th class="serial">#</th>
                        <th>Imagen</th>
                        <th>Nombre</th>
                        <th>Categoria</th>
                        <th>Direccion</th>
                        <th>Estado</th>
                        <th>Etiqueta</th>
                        <th>Activado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{# each restaurants}}
                        <tr>
                          <td class="serial">{{#add @index 1}}{{/add}}</td>
                          <td class="avatar">
                              <div class="round-img">
                                  <img class="rounded-circle" src="images/uploads/restaurant/{{picture1}}" alt="">
                                  <img class="rounded-circle" src="images/uploads/restaurant/{{picture2}}" alt="">
                                  <img class="rounded-circle" src="images/uploads/restaurant/{{picture3}}" alt="">
                              </div>
                          </td>
                          <td class="serial">{{name}}</td>
                          <td class="serial">{{category.name}}</td>
                          <td class="serial">{{direction}}</td>
                          <td class="serial">{{estado}}</td>
                          <td class="serial">{{label}}</td>
                          <td class="serial">{{enabled}}</td>
                          <td>
                              <a class="btn btn-primary" href="/editrest/{{_id}}" role="button"><i class="fa  fa-edit"></i></a>
                              <button class="btn btn-danger deletebtn" href="#" role="button" data-toggle="modal" data-target="#deletemodal" id="{{_id}}"><i class="fa fa-trash-o"></i></button>
                              <a class="btn btn-secondary" href="/disablerest/{{_id}}" role="button"><i class="fa fa-level-up"> <i class="fa fa-level-down"></i></i></a>
                          </td>
                        </tr>
                    {{/ each}}
                </tbody>
            </table>
        </div> <!-- /.table-stats -->
    </div>
  </div>
</div>
<input type="hidden" id="hiddendelete" value="" />
<input type="hidden" id="hiddendeleteentity" value="restaurants" />
<div class="modal fade" id="deletemodal" tabindex="-1" role="dialog" aria-labelledby="deletemodal" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="smallmodalLabel">Are you sure?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    This acction will delete permantely the element
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger modaldeletebtn">Delete</button>
            </div>
        </div>
    </div>
</div>
