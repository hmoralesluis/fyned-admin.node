<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div id="code"></div>
      <div class="overview">
        <input type="hidden" value="{{ gig._id }}" id="gig_id" />
        <div class="template-card">
          <div class="name">
            <h2 class="h2-size">{{gig.title}}</h2>
            <hr />
            <img class="image-test" src="{{gig.picture}}"/>

          </div>

        </div>
      </div>


      <div class="overview">
        <div class="about-card">
          <div class="name">
            <h2 class="h2-size">Informacion adicional</h2>
            <hr />
            <h4> {{ gig.about }}</h4>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-2">
      <div class="overview">
      <div class="order-card">
        <div class="name">
          <h3>${{ gig.price }} Detalles de la orden</h3>
          <a href="/checkout/single_package/{{gig._id }}" class="btn btn-success btn-lg">Realizar la compra</a>
          <button class="btn btn-success btn-lg space-left" id="add-to-cart"><i class="fa fa-shopping-cart"></i></button>
        </div>
      </div>
    </div>
    </div>

  </div>

</div>
