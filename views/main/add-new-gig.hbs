<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="overview">
        <h2 class="text-center">Registra un nuevo platillo</h2>
        <br />
        <div class="new-gig-card">
          <form method="post">
            <div class="form-group">
              <label>Titulo de la comida </label>
              <input type="text" class="form-control" placeholder="Escribe un platillo" name="gig_title">

            </div>

            <div class="form-group">
              <label>Precio</label>
              <input type="text" class="form-control" placeholder="$30" name="gig_price">
            </div>

            <div class="form-group">
              <label>Categoria</label>
              <select class="form-control" name="gig_category">
                <option>Comida Americana</option>
                <option>Comida Mexicana</option>
                <option>Comida Italiana</option>
              </select>
            </div>

            <div class="form-group input-group-lg">
              <label>Informacion adicional</label>
              <input type="text" class="form-control" placeholder="Detalles adicionales" name="gig_about">
            </div>

            <button type="submit" class="btn btn-success btn-lg">Agregar</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
